<h1>Update Song</h1>
<form method="POST" action="/songs/<%= @song.slug %>">
<input type="hidden" id="hidden" name="_method" value="patch"/>
<label>Name: </label>
<input type="text" name="song[name]" id="Name" value="<%= @song.name %>"/><br><br>
<h2>Associate with Artist: </h2>
<% @artists.each do |artist| %>
    <input type="radio" name="song[artist]" value="<%= artist.id %>" id="<%= artist.id %>"/><%= artist.name %><br>
<% end %><br>

<label>Create Artist: </label>
<input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"/><br><br>

<h2>Associate with Genre: </h2>
<% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"<%='checked' if @song.genres.include?(genre) == true %>/><%= genre.name %><br>
<% end %><br>

<input type="submit" value="Save"/>
</form>