<h1>Create a Song</h1>
<form method="POST" action="/songs">
<label>Name: </label>
<input type="text" name="song[name]" id="Name"/><br><br>
<h2>Associate with Artist: </h2>
<% @artists.each do |artist| %>
    <input type="radio" name="song[artist]" value="<%= artist.id %>" id="<%= artist.id %>"/><%= artist.name %><br>
<% end %><br>

<label>Create Artist: </label>
<input type="text" name="artist[name]" id="Artist Name"/><br><br>

<h2>Associate with Genre: </h2>
<% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"/><%= genre.name %><br>
<% end %><br>

<input type="submit" value="Create Song"/>
</form>